# pnpm configuration for CollabCanvas monorepo

# Strict peer dependencies - warn but don't fail
strict-peer-dependencies=false

# Auto install peers to reduce manual dependency management
auto-install-peers=true

# Shamefully hoist dependencies to resolve some React peer dependency issues
shamefully-hoist=false

# Use workspace protocol for local packages
link-workspace-packages=true

# Shared lockfile for the entire workspace
shared-workspace-lockfile=true

# Save exact versions instead of range
save-exact=false

# Fetch retries for better network resilience
fetch-retries=3

# Node linker setting (use node_modules)
node-linker=isolated
